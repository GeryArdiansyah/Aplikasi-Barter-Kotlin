<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="150dp"
    android:layout_gravity="center_horizontal|center_vertical"
    android:background="@drawable/popup_post"
    android:backgroundTint="#FFFFFF">

    <TextView
        android:id="@+id/txtsukseshapus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Berhasil Hapus Postingan!"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textSize="18dp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="35dp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtsukseshapus"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnokayhapus"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Okay"
            android:textAlignment="center"
            android:backgroundTint="@color/blue"
            android:background="@drawable/rounded_button_logout"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold"
            android:textAllCaps="false"
            />

    </LinearLayout>

</RelativeLayout>